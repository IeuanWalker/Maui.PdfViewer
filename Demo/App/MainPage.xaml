<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="App.MainPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:App.Controls;assembly=App"
             Padding="{StaticResource PagePadding}">
    <ContentPage.Content>
        <VerticalStackLayout Spacing="20" VerticalOptions="Center">
            <controls:CustomButton Clicked="BasicViewerBtn_Clicked" Text="Basic" />
            <controls:CustomButton Text="Full featured" />
            <controls:CustomButton Text="Embedded" />
            <controls:CustomButton Text="External" />
            <controls:CustomButton Text="Password protected" />
            <controls:CustomButton Text="Dynamic (theme/ text)" />
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>